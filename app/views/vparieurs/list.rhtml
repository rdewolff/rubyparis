<h1>Liste des parieurs</h1>

<table>
  <tr>
  <% for column in Vparieur.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for vparieur in @vparieurs %>
  <tr>
  <% for column in Vparieur.content_columns %>
    <td><%=h vparieur.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Afficher', :action => 'show', :id => vparieur %></td>
    <td><%= link_to 'Modifier', :action => 'edit', :id => vparieur %></td>
    <td><%= link_to 'Effacer', { :action => 'destroy', :id => vparieur },
		:confirm => ("Etes vous sur de vouloir effacer '" + vparieur.prenom + " " + vparieur.nom + "'?"),
		:method => :post %></td>
  </tr>
<% end %>
</table>

