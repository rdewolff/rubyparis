<h1>Liste des administrateurs</h1>

<table>
  <tr>
  <% for column in Vadministrateur.content_columns %>
  	<% if not column.human_name == 'Password' %>
    <th><%= column.human_name %></th>
	<% end %>
  <% end %>
  </tr>
  
<% for vadministrateur in @vadministrateurs %>
  <tr>
  <% for column in Vadministrateur.content_columns %>
  	<% if not column.human_name == 'Password' %>
    	<td><%=h vadministrateur.send(column.name) %></td>
	<% end %>
  <% end %>
    <td><%= link_to 'Afficher', :action => 'show', :id => vadministrateur %></td>
    <td><%= link_to 'Modifier', :action => 'edit', :id => vadministrateur %></td>
    <td><%= link_to 'Effacer', { :action => 'destroy', :id => vadministrateur },
		:confirm => ("Etes vous sur de vouloir effacer '" + vadministrateur.prenom + " " + vadministrateur.nom + "'?"),
		:method => :post %></td>
  </tr>
<% end %>
</table>

