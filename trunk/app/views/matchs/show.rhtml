
<p>
	<table>
		<tr>
			<td colspan="2"><h2><%= @match.equipea.nom + " " + (@match.scoreA || " ").to_s + " - " + (@match.scoreB || " ").to_s + " " + @match.equipeb.nom%></h2></td>
		</tr>
		<tr>
			<td width="50">Competition:</td>
			<td><b><%= @match.groupe.competition.nom %></b></td>
