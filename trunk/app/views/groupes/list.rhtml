<h1>Liste des groupes</h1>

<table>
  <tr>
  <% for column in Groupe.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for groupe in @groupes %>
  <tr>
  <% for column in Groupe.content_columns %>
    <td><%=h groupe.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Afficher', :action => 'show', :id => groupe %></td>
    <td><%= link_to 'Modifer', :action => 'edit', :id => groupe %></td>
    <td><%= link_to 'Effacer', { :action => 'destroy', :id => groupe }, :confirm => 'Etes vous sur?', :method => :post %></td>
  </tr>
<% end %>
</table>

